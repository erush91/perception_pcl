<launch>
  <node pkg="nodelet" type="nodelet" name="pcl_manager" args="manager" output="screen" />

  <!-- Run a VoxelGrid filter to clean NaNs and downsample the data -->
  <node pkg="nodelet" type="nodelet" name="voxel_grid_x" args="load pcl/VoxelGrid pcl_manager" output="screen">
    <remap from="~input" to="/camera_fwd/depth/color/points"/>
    <remap from="~voxel_grid/output" to="/voxel_grid_x/output"/>
    <rosparam>
      filter_field_name: x
      filter_limit_min: -10
      filter_limit_max:  10
      filter_limit_negative: False
      leaf_size: 0.02
    </rosparam>
  </node>

  <!-- Run a VoxelGrid filter to clean NaNs and downsample the data -->
  <node pkg="nodelet" type="nodelet" name="voxel_grid_y" args="load pcl/VoxelGrid pcl_manager" output="screen">
    <remap from="~input" to="/voxel_grid_x/output"/>
    <remap from="~voxel_grid/output" to="/voxel_grid_y/output"/>
    <rosparam>
      filter_field_name: y
      filter_limit_min: 0
      filter_limit_max: 1
      filter_limit_negative: False
      leaf_size: 0.02
    </rosparam>
  </node>

  <!-- Run a VoxelGrid filter to clean NaNs and downsample the data -->
  <node pkg="nodelet" type="nodelet" name="voxel_grid_z" args="load pcl/VoxelGrid pcl_manager" output="screen">
    <remap from="~input" to="/voxel_grid_y/output"/>
    <remap from="~voxel_grid/output" to="/voxel_grid_z/output"/>
    <rosparam>
      filter_field_name: z
      filter_limit_min:  0
      filter_limit_max:  4
      filter_limit_negative: False
      leaf_size: 0.02
    </rosparam>
  </node>

  <!-- Estimate point normals -->
  <node pkg="nodelet" type="nodelet" name="don" args="load pcl/DiffNormals pcl_manager" output="screen">
    <remap from="~input" to="/voxel_grid_z/output" />
    <rosparam>
      # -[ Mandatory parameters
      k_search:                 0.00
      radius_search:            0.00
      don_radius_1:             0.03
      don_radius_2:             0.30
      don_LT_threshold:         0.00
      don_GT_threshold:         0.10
      normal_radius:            0.05
      normal_x_LT_threshold:   -0.30
      normal_x_GT_threshold:    0.30
      normal_y_LT_threshold:    0.94
      normal_y_GT_threshold:    1.00
      normal_z_LT_threshold:   -0.30
      normal_z_GT_threshold:    0.30
      curvature_LT_threshold:   0.00
      curvature_GT_threshold:   0.002
      # Set the spatial locator. Possible values are: 0 (ANN), 1 (FLANN), 2 (organized)
      spatial_locator: 0
    </rosparam>
  </node>
</launch>
